<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="211dp"
        android:layout_height="@dimen/image_height"
        android:layout_marginTop="@dimen/lay_martop_40"
        android:contentDescription="@string/onboarding_image"
        android:src="@drawable/onboarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/lay_marhor_16"
        android:layout_marginTop="@dimen/lay_martop_16"
        android:fontFamily="@font/nunito_bold"
        android:lineSpacingMultiplier="0.9"
        android:text="@string/dicover_the_power_of_ai"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_tv_discover_45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_in"
        android:layout_width="@dimen/button_width_380"
        android:layout_height="@dimen/button_height_60"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_button_30"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_discover"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up"
        android:layout_width="@dimen/button_width_380"
        android:layout_height="@dimen/button_height_60"
        android:layout_marginBottom="@dimen/lay_marbot_16"
        android:background="@drawable/button_stroke"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/sign_up"
        android:textColor="@color/light_green"
        android:textSize="@dimen/ts_button_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_in" />

</androidx.constraintlayout.widget.ConstraintLayout>